pipeline {
    agent any
    tools {
        jdk 'JDK17' // Ensure this matches your Jenkins Global Tool Configuration
        maven 'maven_build'
    }
    environment {
        SCANNER_HOME = tool 'sonar_scanner'
    }
    
    stages {
        stage('git-checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/lucky1416/java_practice.git'
            }
        }

        stage('Code-Compile') {
            steps {
                // Fixed: Added curly braces for the dir block
                dir('Boardgame-main') { 
                    sh "mvn clean compile"
                }
            }
        }

        stage('Unit-Test') {
            steps {
                // Fixed: Added curly braces for the dir block
                dir('Boardgame-main') {
                    sh "mvn clean test"
                }
            }
        }
        
        stage('scanner') {
            steps {
                dir('Boardgame-main') {
                    // This block injects Sonar server URL and Auth token into the shell
                    withSonarQubeEnv('sonarqube') {
                        sh "${SCANNER_HOME}/bin/sonar-scanner \
                            -Dsonar.projectName=bloggingApp \
                            -Dsonar.projectKey=bloggingApp \
                            -Dsonar.java.binaries=target"
                    }
                }
            }
        }
    }
}
